rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public reads for leaderboard
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if request.auth != null ||
                   (request.resource.data.score > 0 &&
                    request.resource.data.name.size() > 0 &&
                    request.resource.data.name.size() <= 20 &&
                    request.resource.data.difficulty in ['easy', 'normal', 'hard']);
    }
    // Allow public reads and writes for NumberCrunch leaderboard
    match /NumberCrunchLeaderboard/{entry} {
      allow read: if true;
      allow write: if request.auth != null ||
                   (request.resource.data.score > 0 &&
                    request.resource.data.name.size() > 0 &&
                    request.resource.data.name.size() <= 20 &&
                    request.resource.data.difficulty in ['easy', 'normal', 'hard'] &&
                    request.resource.data.level > 0);
    }
  }
}